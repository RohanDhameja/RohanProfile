    image: "https://images.pexels.com/photos/1181406/pexels-photo-1181406.jpeg?auto=compress&cs=tinysrgb&w=600",
    date: "Jul 2024",
    description: "A comic about connecting different communities through understanding.",
    tags: ["Community", "Understanding", "Bridges"]
  }
