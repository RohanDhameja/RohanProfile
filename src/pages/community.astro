---

<Layout title="Community Work - Rohan">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-accent-50 via-white to-primary-50 py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-6">Community Impact</h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
        Building bridges between technology and community through education, creativity, and inclusive outreach programs.
      </p>
    </div>
  </section>

  <!-- Buddy Coding Program -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center mb-16">
        <div>
          <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-6">Buddy Coding Program</h2>
          <p class="text-lg text-gray-600 mb-6 leading-relaxed">
            Teaching coding, robotics, and Scratch programming to neurodiverse kids, creating an inclusive environment 
            where every child can discover their potential in technology. Our comprehensive program covers everything 
            from visual programming to hands-on Arduino projects.
          </p>
          <div class="space-y-4">
            <div class="flex items-center space-x-3">
              <div class="w-8 h-8 bg-primary-100 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
              <span class="text-gray-700">50+ kids reached through weekly coding & robotics sessions</span>
            </div>
            <div class="flex items-center space-x-3">
              <div class="w-8 h-8 bg-primary-100 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
              <span class="text-gray-700">Scratch programming, Python basics, and Arduino projects</span>
            </div>
            <div class="flex items-center space-x-3">
              <div class="w-8 h-8 bg-primary-100 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
              <span class="text-gray-700">Specialized curriculum for different learning needs</span>
            </div>
            <div class="flex items-center space-x-3">
              <div class="w-8 h-8 bg-primary-100 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
              <span class="text-gray-700">Parent workshops and ongoing family support</span>
            </div>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-4">
          <img src="https://images.pexels.com/photos/3184465/pexels-photo-3184465.jpeg?auto=compress&cs=tinysrgb&w=400" 
               alt="Kids learning to code" 
               class="rounded-lg shadow-lg hover:scale-105 transition-transform duration-300">
          <img src="https://images.pexels.com/photos/2977565/pexels-photo-2977565.jpeg?auto=compress&cs=tinysrgb&w=400" 
               alt="Arduino robotics session" 
               class="rounded-lg shadow-lg hover:scale-105 transition-transform duration-300 mt-8">
          <img src="https://images.pexels.com/photos/3184292/pexels-photo-3184292.jpeg?auto=compress&cs=tinysrgb&w=400" 
               alt="Group coding activity" 
               class="rounded-lg shadow-lg hover:scale-105 transition-transform duration-300">
          <img src="https://images.pexels.com/photos/8566528/pexels-photo-8566528.jpeg?auto=compress&cs=tinysrgb&w=400" 
               alt="Robotics showcase" 
               class="rounded-lg shadow-lg hover:scale-105 transition-transform duration-300 mt-8">
        </div>
      </div>

      <!-- Program Videos -->
      <div class="mt-16">
        <div class="flex items-center justify-between mb-8">
          <h3 class="text-2xl font-bold text-gray-900">Program Highlights</h3>
          <button 
            id="show-all-videos"
            class="inline-flex items-center px-4 py-2 text-primary-600 hover:text-primary-700 font-medium group"
          >
            View All Videos
            <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </button>
        </div>
        
        <div id="videos-grid" class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {buddyProgramVideos.slice(0, 3).map((video) => (
            <div key={video.id} class="bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300">
              <div class="aspect-video bg-gray-200 relative overflow-hidden">
                <img 
                  src={video.thumbnail} 
                  alt={video.title}
                  class="w-full h-full object-cover hover:scale-110 transition-transform duration-500"
                />
                <div class="absolute inset-0 bg-black/20 flex items-center justify-center opacity-0 hover:opacity-100 transition-opacity duration-300">
                  <svg class="w-12 h-12 text-white" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M8 5v14l11-7z"/>
                  </svg>
                </div>
                <div class="absolute bottom-2 right-2 bg-black/70 text-white text-xs px-2 py-1 rounded">
                  {video.duration}
                </div>
              </div>
              <div class="p-4">
                <h4 class="font-semibold text-gray-900 mb-2">{video.title}</h4>
                <p class="text-sm text-gray-600 mb-2">{video.description}</p>
                <div class="text-xs text-gray-500">{video.date}</div>
              </div>
            </div>
          ))}
        </div>

        <!-- Hidden videos that show when "View All" is clicked -->
        <div id="videos-expanded" class="hidden mt-6 grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {buddyProgramVideos.slice(3).map((video) => (
            <div key={video.id} class="bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300">
              <div class="aspect-video bg-gray-200 relative overflow-hidden">
                <img 
                  src={video.thumbnail} 
                  alt={video.title}
                  class="w-full h-full object-cover hover:scale-110 transition-transform duration-500"
                />
                <div class="absolute inset-0 bg-black/20 flex items-center justify-center opacity-0 hover:opacity-100 transition-opacity duration-300">
                  <svg class="w-12 h-12 text-white" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M8 5v14l11-7z"/>
                  </svg>
                </div>
                <div class="absolute bottom-2 right-2 bg-black/70 text-white text-xs px-2 py-1 rounded">
                  {video.duration}
                </div>
              </div>
              <div class="p-4">
                <h4 class="font-semibold text-gray-900 mb-2">{video.title}</h4>
                <p class="text-sm text-gray-600 mb-2">{video.description}</p>
                <div class="text-xs text-gray-500">{video.date}</div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Comic Gallery -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-6">Comic Strip Gallery</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Using humor and creativity to raise awareness about neurodiversity and build understanding 
          in our community through engaging visual stories.
        </p>
      </div>
      
      <!-- Latest 3 Comics -->
      <div class="grid md:grid-cols-3 gap-8 mb-12">
        {comicStrips.slice(0, 3).map((comic) => (
          <div key={comic.id} class="bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105">
            <div class="aspect-square bg-gradient-to-br from-blue-100 to-purple-100 relative overflow-hidden">
              <img 
                src={comic.image} 
                alt={comic.title}
                class="w-full h-full object-cover hover:scale-110 transition-transform duration-500"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
              <div class="absolute bottom-4 left-4 right-4">
                <div class="flex flex-wrap gap-1 mb-2">
                  {comic.tags.slice(0, 2).map(tag => (
                    <span key={tag} class="px-2 py-1 text-xs font-medium text-white bg-white/20 backdrop-blur-sm rounded-full">
                      {tag}
                    </span>
                  ))}
                </div>
                <h3 class="text-lg font-semibold text-white">{comic.title}</h3>
              </div>
            </div>
            <div class="p-6">
              <p class="text-sm text-gray-600 mb-2">Latest • {comic.date}</p>
              <p class="text-gray-700">{comic.description}</p>
            </div>
          </div>
        ))}
      </div>

      <!-- View All Comics Button -->
      <div class="text-center">
        <button 
          id="view-all-comics"
          class="inline-flex items-center px-8 py-3 bg-primary-600 text-white font-medium rounded-lg hover:bg-primary-700 hover:scale-105 transition-all duration-200 shadow-lg hover:shadow-xl"
        >
          View All Comic Strips
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>
      </div>

      <!-- Hidden Older Comics -->
      <div id="older-comics" class="hidden mt-12">
        <h3 class="text-2xl font-bold text-gray-900 mb-8 text-center">Previous Comic Strips</h3>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {comicStrips.slice(3).map((comic) => (
            <div key={comic.id} class="bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105">
              <div class="aspect-square bg-gradient-to-br from-green-100 to-teal-100 relative overflow-hidden">
                <img 
                  src={comic.image} 
                  alt={comic.title}
                  class="w-full h-full object-cover hover:scale-110 transition-transform duration-500"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
                <div class="absolute bottom-4 left-4 right-4">
                  <div class="flex flex-wrap gap-1 mb-2">
                    {comic.tags.slice(0, 2).map(tag => (
                      <span key={tag} class="px-2 py-1 text-xs font-medium text-white bg-white/20 backdrop-blur-sm rounded-full">
                        {tag}
                      </span>
                    ))}
                  </div>
                  <h3 class="text-lg font-semibold text-white">{comic.title}</h3>
                </div>
              </div>
              <div class="p-6">
                <p class="text-sm text-gray-600 mb-2">{comic.date}</p>
                <p class="text-gray-700">{comic.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-20 bg-gradient-to-r from-primary-600 to-accent-600">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl lg:text-4xl font-bold text-white mb-6">Want to Support Our Mission?</h2>
      <p class="text-xl text-primary-100 mb-8 leading-relaxed">
        Together, we can make technology accessible to everyone. Whether through volunteering, 
        donations, or spreading awareness, every contribution makes a difference.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" 
           class="inline-flex items-center px-8 py-3 border-2 border-white text-lg font-medium rounded-lg text-white hover:bg-white hover:text-primary-600 transition-all duration-200">
          Get Involved
        </a>
        <a href="mailto:rohan@example.com" 
           class="inline-flex items-center px-8 py-3 bg-white text-lg font-medium rounded-lg text-primary-600 hover:bg-primary-50 transition-all duration-200">
          Contact Me
        </a>
      </div>
    </div>
  </section>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Videos Toggle
    const showAllVideosBtn = document.getElementById('show-all-videos');
    const videosExpanded = document.getElementById('videos-expanded');
    
    if (showAllVideosBtn && videosExpanded) {
      showAllVideosBtn.addEventListener('click', function() {
        const isHidden = videosExpanded.classList.contains('hidden');
        
        if (isHidden) {
          videosExpanded.classList.remove('hidden');
          showAllVideosBtn.innerHTML = `
            Show Less
            <svg class="w-4 h-4 ml-2 group-hover:-translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
          `;
        } else {
          videosExpanded.classList.add('hidden');
          showAllVideosBtn.innerHTML = `
            View All Videos
            <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          `;
        }
      });
    }

    // Comics Toggle
    const viewAllComicsBtn = document.getElementById('view-all-comics');
    const olderComics = document.getElementById('older-comics');
    
    if (viewAllComicsBtn && olderComics) {
      viewAllComicsBtn.addEventListener('click', function() {
        const isHidden = olderComics.classList.contains('hidden');
        
        if (isHidden) {
          olderComics.classList.remove('hidden');
          viewAllComicsBtn.innerHTML = `
            Show Less Comics
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7"></path>
            </svg>
          `;
          // Smooth scroll to older comics
          olderComics.scrollIntoView({ behavior: 'smooth', block: 'start' });
        } else {
          olderComics.classList.add('hidden');
          viewAllComicsBtn.innerHTML = `
            View All Comic Strips
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          `;
        }
      });
    }
  });
</script>